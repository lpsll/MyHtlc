<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_170"
        android:background="#ffffff">

        <EditText
            android:id="@+id/et_change_phone_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_70"
            android:background="@null"
            android:digits="1234567890"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColorHint="@color/tv_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/fs_45" />


        <com.autodesk.easyhome.shejijia.mine.view.TimeButton
            android:id="@+id/TimeButton_mine_changePhone"
            android:layout_width="@dimen/ds_290"
            android:layout_height="@dimen/ds_90"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds_60"
            android:background="@drawable/ok_selector_dark"
            android:text="发送验证码"
            android:textColor="#ffffff"
            android:textSize="@dimen/fs_40" />
    </RelativeLayout>

    <View
        android:id="@+id/cut_off_line5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_40"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_170"
        android:background="#ffffff">

        <EditText
            android:id="@+id/et_change_phone_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_70"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColorHint="@color/tv_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/fs_45" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_change_phone_ok"
        style="@style/button_click"
        android:text="验证后换绑手机" />


</LinearLayout>
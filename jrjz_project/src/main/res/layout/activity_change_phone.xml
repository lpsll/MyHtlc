<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="#ffffff">

        <EditText
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x60"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColorHint="@color/tv_hint"
            android:textSize="@dimen/x33" />


        <Button
            android:layout_marginRight="@dimen/x40"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/x70"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok_selector_dark"
            android:text="发送验证码"
            android:textColor="#ffffff"
            android:textSize="@dimen/x28" />
    </RelativeLayout>

    <View
        android:id="@+id/cut_off_line5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:layout_below="@id/username_txt"
        android:background="#f5f5f5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="#ffffff"
       >

        <EditText

            android:layout_marginLeft="@dimen/x60"
            android:id="@+id/verify_code_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColorHint="@color/tv_hint"
            android:textSize="@dimen/x33" />


    </RelativeLayout>

    <TextView
        style="@style/button_click"
        android:text="验证后换绑手机"
        />


</LinearLayout>
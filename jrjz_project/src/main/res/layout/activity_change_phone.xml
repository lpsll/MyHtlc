<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#ffffff"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <EditText
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColorHint="#dfdfdf"
            android:textSize="15sp" />


        <Button
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok_selector_dark"
            android:paddingTop="0dp"
            android:text="发送验证码"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/cut_off_line5"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/username_txt"
        android:background="#f5f5f5"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#ffffff"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <EditText

            android:id="@+id/verify_code_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColorHint="#dfdfdf"
            android:textSize="15sp" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"

        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ok_selector"
        android:gravity="center"
        android:text="验证后换绑手机"
        android:textColor="#ffffff" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_200"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_housekeeping_item_big_img"
            android:layout_width="@dimen/ds_150"
            android:layout_height="@dimen/ds_150"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ds_80"
            android:background="@drawable/lairentupianxdpi_03" />

        <TextView
            android:id="@+id/tv_housekeeping_item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ds_60"
            android:text="来人到家-北京店"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/fs_50" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/ds_30"
        android:layout_marginRight="@dimen/ds_30"
        android:background="@color/linear_gray" />

    <RelativeLayout
        android:layout_marginTop="@dimen/ds_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_130"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_housekeeping_item_img1"
            android:layout_width="@dimen/ds_120"
            android:layout_height="@dimen/ds_120"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_70"
            android:background="@drawable/dingdangdaojiatupianxdpi_03" />

        <TextView
            android:id="@+id/tv_housekeeping_item_service_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_60"
            android:layout_toRightOf="@id/img_housekeeping_item_img1"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="@dimen/ds_600"
            android:text="【来人到家】 家庭保洁服务四小时"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/fs_45" />

        <TextView
            android:id="@+id/tv_housekeeping_item_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds_30"
            android:text="￥119.00"
            android:textColor="@color/price_red"
            android:textSize="@dimen/fs_45" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/ds_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_130"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_housekeeping_item_img2"
            android:layout_width="@dimen/ds_120"
            android:layout_height="@dimen/ds_120"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_70"
            android:background="@drawable/dingdangdaojiatupianxdpi_03" />

        <TextView
            android:id="@+id/tv_housekeeping_item_service_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_60"
            android:layout_toRightOf="@id/img_housekeeping_item_img2"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="@dimen/ds_600"
            android:text="【来人到家】 家庭保洁服务四小时"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/fs_45" />

        <TextView
            android:id="@+id/tv_housekeeping_item_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds_30"
            android:text="￥59.00"
            android:textColor="@color/price_red"
            android:textSize="@dimen/fs_45" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/ds_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_130"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_housekeeping_item_img3"
            android:layout_width="@dimen/ds_120"
            android:layout_height="@dimen/ds_120"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_70"
            android:background="@drawable/dingdangdaojiatupianxdpi_03" />

        <TextView
            android:id="@+id/tv_housekeeping_item_service_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_60"
            android:layout_toRightOf="@id/img_housekeeping_item_img3"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="@dimen/ds_600"
            android:text="【来人到家】 家庭保洁服务四小时"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/fs_45" />

        <TextView
            android:id="@+id/tv_housekeeping_item_price3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds_30"
            android:text="￥119.00"
            android:textColor="@color/price_red"
            android:textSize="@dimen/fs_45" />


    </RelativeLayout>

    <View
        android:layout_marginBottom="@dimen/ds_60"
        android:layout_marginTop="@dimen/ds_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linear_gray" />

    <View
        android:layout_marginTop="@dimen/ds_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_40"
        android:background="@color/linear_gray" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <include android:id="@+id/head"
        layout="@layout/pager_head"></include>
    <RelativeLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="185dp" >

        <LinearLayout
            android:id="@+id/top_ad_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="205dp"
            android:orientation="horizontal" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#50808080"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/top_ad_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="图片标题"
                android:textColor="#F6F6F6" />

            <LinearLayout
                android:id="@+id/dots_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="horizontal" />
        </LinearLayout>
    </RelativeLayout>
    <!--以上为轮播图部分-->
    <LinearLayout
        android:id="@+id/layout_middle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top1"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/middle_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/middle_image1"
                android:textSize="16sp"
                android:text="家装维修"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/middle_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test2"/>
            <TextView
                android:layout_below="@id/middle_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="家具维修"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/middle_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/middle_image3"
                android:textSize="16sp"
                android:text="家电维修"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/middle_image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/middle_image4"
                android:textSize="16sp"
                android:text="家政服务"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/middle_image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@id/middle_image5"
                android:text="社区服务"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/cutoff_rule1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/layout_middle1"
        android:background="#f2f2f2">
    </View>
    <ImageView
        android:id="@+id/image_1"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@+id/cutoff_rule1"
        android:background="@mipmap/test6"/>
    <View
        android:id="@+id/cutoff_rule2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/image_1"
        android:background="#f2f2f2">
    </View>
    <ListView
        android:id="@+id/content_service_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="166dp"
        android:layout_below="@+id/cutoff_rule2">

    </ListView>
    <TextView
        android:id="@+id/all_service"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:gravity="center"
        android:text="查看全部服务"
        />
    <View
        android:id="@+id/cutoff_line5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:background="#f5f5f5"></View>
</RelativeLayout>
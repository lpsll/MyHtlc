<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ff"
    android:id="@+id/item_lin"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_200"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_housekeeping_item_big_img"
            android:layout_width="@dimen/ds_150"
            android:layout_height="@dimen/ds_150"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ds_80"
            android:background="@drawable/lairentupianxdpi_03" />

        <TextView
            android:id="@+id/tv_housekeeping_item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ds_60"
            android:text="来人到家-北京店"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/fs_50" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginTop="@dimen/ds_20"
        android:background="@color/color_cc"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/homeservice_item_list"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ds_20"
        android:layout_height="wrap_content"
        android:background="@color/color_cc"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginTop="@dimen/ds_20"
        android:background="@color/color_cc"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_40"
        android:layout_marginTop="@dimen/ds_60"
        android:background="@color/color_cc"/>
</LinearLayout>

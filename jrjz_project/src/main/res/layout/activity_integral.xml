<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_40"
        android:layout_marginLeft="@dimen/ds_40"
        android:textColor="@color/color_00"
        android:text=""
        android:textSize="@dimen/fs_45"/>
    <TextView
        android:id="@+id/tv_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_40"
        android:layout_marginLeft="@dimen/ds_40"
        android:textColor="@color/color_00"
        android:text=""
        android:textSize="@dimen/fs_45"/>

    <Button
        android:id="@+id/btn_pre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_100"
        android:layout_marginLeft="@dimen/ds_60"
        android:layout_marginRight="@dimen/ds_60"
        android:background="@drawable/ok_selector_shap_unpressed"
        android:text="@string/preservation"
        android:textSize="@dimen/ds_50"
        android:textColor="@color/color_00"
        />

</LinearLayout>

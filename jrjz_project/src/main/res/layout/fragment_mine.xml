<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_mine_changephone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_280"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ds_200"
                    android:layout_height="@dimen/ds_200"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ds_90"
                    android:background="@drawable/touxiangxdpi_03" />

                <TextView
                    android:id="@+id/tv_mine_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="请登录"
                    android:textColor="@drawable/text_press_selector"
                    android:textSize="@dimen/fs_50" />

                <ImageView
                    android:layout_width="@dimen/ds_30"
                    android:layout_height="@dimen/ds_50"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/ds_100"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_200"
                android:gravity="center"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/rl_my_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/score_img1"
                        android:layout_width="@dimen/ds_50"
                        android:layout_height="@dimen/ds_50"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ds_90"
                        android:src="@drawable/score_mine" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds_220"
                        android:layout_marginTop="@dimen/ds_15"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/score_txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的积分"
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/fs_43" />

                        <TextView
                            android:id="@+id/tv_mine_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="0分"
                            android:textColor="#0b8ce6"
                            android:textSize="@dimen/fs_43" />

                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#f5f5f5" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/score_img2"
                        android:layout_width="@dimen/ds_50"
                        android:layout_height="@dimen/ds_50"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ds_90"
                        android:src="@drawable/score_yue" />

                    <LinearLayout
                        android:layout_marginLeft="@dimen/ds_210"
                        android:layout_marginTop="@dimen/ds_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/tv_my_yue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="我的余额"
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/fs_43" />

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/tv_mine_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0元"
                            android:textColor="#0b8ce6"
                            android:textSize="@dimen/fs_43" />


                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_40"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/ll_mine_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_160"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ds_50"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_weight="2"
                    android:src="@drawable/locate_address" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="常用地址"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <ImageView
                    android:layout_width="@dimen/ds_30"
                    android:layout_height="@dimen/ds_40"
                    android:layout_weight="2"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/ll_mine_chongzhi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_160"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ds_50"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_weight="2"
                    android:src="@drawable/top_up" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="充值"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <ImageView
                    android:layout_width="@dimen/ds_30"
                    android:layout_height="@dimen/ds_40"
                    android:layout_weight="2"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/ll_mine_myorder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_160"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ds_50"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_weight="2"
                    android:src="@drawable/order_mine" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="我的订单"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <ImageView
                    android:layout_width="@dimen/ds_30"
                    android:layout_height="@dimen/ds_40"
                    android:layout_weight="2"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/ll_mine_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_160"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ds_50"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_weight="2"
                    android:src="@drawable/share_mine" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="分享给好友"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <ImageView
                    android:layout_width="@dimen/ds_30"
                    android:layout_height="@dimen/ds_40"
                    android:layout_weight="2"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/ll_mine_coupon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_160"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ds_50"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_weight="2"
                    android:src="@drawable/coupons" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="优惠券"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <ImageView
                    android:layout_width="@dimen/ds_30"
                    android:layout_height="@dimen/ds_40"
                    android:layout_weight="2"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/ll_mine_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_160"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ds_50"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_weight="2"
                    android:src="@drawable/suggest_mine" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="意见反馈"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <ImageView
                    android:layout_width="@dimen/ds_30"
                    android:layout_height="@dimen/ds_40"
                    android:layout_weight="2"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/ll_mine_more_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_160"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ds_50"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_weight="2"
                    android:src="@drawable/setting_mine" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="更多设置"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <ImageView
                    android:layout_width="@dimen/ds_30"
                    android:layout_height="@dimen/ds_40"
                    android:layout_weight="2"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/ll_mine_more_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_160"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ds_50"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_weight="2"
                    android:src="@drawable/dianhuaxdpi_03" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="客服电话"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <ImageView
                    android:layout_width="@dimen/ds_30"
                    android:layout_height="@dimen/ds_40"
                    android:layout_weight="2"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/ll_about_juran"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_160"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ds_50"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_weight="2"
                    android:src="@drawable/about_us_mine" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="关于居然"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <ImageView
                    android:layout_width="@dimen/ds_30"
                    android:layout_height="@dimen/ds_40"
                    android:layout_weight="2"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_mine_changephone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x230"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/x150"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x60"
                    android:background="@mipmap/mine_headimg_test" />

                <TextView
                    android:id="@+id/middle_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="182938203482"
                    android:textColor="#1d1d26"
                    android:textSize="@dimen/x33" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x60"
                    android:src="@mipmap/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f5f5f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x160"
                android:gravity="center"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/score_img1"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x50"
                        android:src="@mipmap/score_mine" />

                    <TextView
                        android:id="@+id/score_txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x160"
                        android:layout_marginTop="@dimen/x10"
                        android:text="我的积分"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/x33" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/score_txt1"
                        android:layout_marginLeft="@dimen/x177"
                        android:text="200分"
                        android:textColor="#0b8ce6"
                        android:textSize="@dimen/x33" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#f5f5f5"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/score_img2"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x50"
                        android:src="@mipmap/score_yue" />

                    <TextView
                        android:id="@+id/tv_my_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x150"
                        android:layout_marginTop="@dimen/x5"
                        android:text="我的余额"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/x33"
                        />

                    <TextView
                        android:layout_below="@id/tv_my_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x165"
                        android:text="2000元"
                        android:textColor="#0b8ce6"
                        android:textSize="@dimen/x33" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="#f5f5f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x40"
                    android:layout_weight="2"
                    android:src="@mipmap/locate_address" />

                <TextView
                    android:textSize="@dimen/x33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="常用地址"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_weight="2"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>

            <LinearLayout
                android:id="@+id/ll_mine_chongzhi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x40"
                    android:layout_weight="2"
                    android:src="@mipmap/top_up" />

                <TextView
                    android:textSize="@dimen/x33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="充值"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_weight="2"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"></View>

            <LinearLayout
                android:id="@+id/myorder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x40"
                    android:layout_weight="2"
                    android:src="@mipmap/order_mine" />

                <TextView
                    android:textSize="@dimen/x33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="我的订单"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_weight="2"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x40"
                    android:layout_weight="2"
                    android:src="@mipmap/share_mine" />

                <TextView
                    android:textSize="@dimen/x33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="分享给好友"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_weight="2"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"></View>

            <LinearLayout
                android:id="@+id/coupon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x40"
                    android:layout_weight="2"
                    android:src="@mipmap/coupons" />

                <TextView
                    android:textSize="@dimen/x33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="优惠券"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_weight="2"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"></View>

            <LinearLayout
                android:id="@+id/ll_mine_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x40"
                    android:layout_weight="2"
                    android:src="@mipmap/suggest_mine" />

                <TextView
                    android:textSize="@dimen/x33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="意见反馈"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_weight="2"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>

            <LinearLayout
                android:id="@+id/ll_mine_more_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x40"
                    android:layout_weight="2"
                    android:src="@mipmap/setting_mine" />

                <TextView
                    android:textSize="@dimen/x33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="更多设置"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_weight="2"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:gravity="center_vertical"
                android:weightSum="13">

                <ImageView
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x40"
                    android:layout_weight="2"
                    android:src="@mipmap/about_us_mine" />

                <TextView
                    android:textSize="@dimen/x33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="关于居然"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_weight="2"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <include android:id="@+id/head"
        layout="@layout/pager_head"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#ffffff"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <EditText
            android:id="@+id/username_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginTop="25dp"
            android:textColorHint="#dfdfdf"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:gravity="top"
            android:hint="如果您在使用过程中遇到问题，请留下您的宝贵意见和联系方式，客服将会第一时间联系您"
            android:layout_below="@id/username"/>



    </RelativeLayout>
    <View
        android:id="@id/cut_off_line5"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/username_txt"
        android:background="#f5f5f5"></View>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#0570b6"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="提交"/>


</LinearLayout>
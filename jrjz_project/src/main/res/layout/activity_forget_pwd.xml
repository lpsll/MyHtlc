<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/linear_gray"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ds_50"
        android:paddingLeft="@dimen/ds_70"
        android:paddingTop="@dimen/ds_50">


        <EditText
            android:id="@+id/et_forgetpwd_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColorHint="@color/btn_gray"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/fs_45" />

        <com.autodesk.easyhome.shejijia.mine.view.TimeButton
            android:id="@+id/TimeButton_forgetpwd"
            android:layout_width="@dimen/ds_260"
            android:layout_height="@dimen/ds_80"
            android:layout_marginLeft="@dimen/ds_360"
            android:background="@drawable/ok_selector_dark"
            android:text="发送验证码"
            android:textColor="#ffffff"
            android:textSize="@dimen/fs_37" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_40"
        android:layout_below="@id/username_txt"
        android:background="@color/linear_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ds_50"
        android:paddingLeft="@dimen/ds_70"
        android:paddingTop="@dimen/ds_50">

        <EditText
            android:id="@+id/et_forgetpwd_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColorHint="@color/btn_gray"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/fs_45" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_40"
        android:layout_below="@id/username_txt"
        android:background="@color/linear_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ds_50"
        android:paddingLeft="@dimen/ds_70"
        android:paddingTop="@dimen/ds_50">

        <EditText
            android:id="@+id/et_forgetpwd_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColorHint="@color/btn_gray"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/fs_45" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_1"
            android:layout_below="@id/username_txt"
            android:layout_marginRight="@dimen/ds_70"
            android:layout_marginTop="@dimen/ds_50"
            android:background="@color/linear_gray" />


        <EditText
            android:id="@+id/et_forgetpwd_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_50"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:textColorHint="@color/btn_gray"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/fs_45" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_ok"
        style="@style/button_click"
        android:layout_marginTop="@dimen/ds_130"
        android:text="确定" />


</LinearLayout>


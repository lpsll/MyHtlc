<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_180"
        android:orientation="horizontal">
        <View
            android:id="@+id/left_view"
            android:layout_width="@dimen/ds_20"
            android:layout_height="match_parent"
            android:background="@color/navi"/>
    <TextView
        android:id="@+id/left_list_item"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/color_33"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_2"
        android:background="@color/color_ff"/>

</LinearLayout>

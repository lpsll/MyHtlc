<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_30"
        android:background="#f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_40"
            android:layout_marginTop="@dimen/ds_38"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/ds_30">

            <LinearLayout
                android:id="@+id/order_lin01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/order_project"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <TextView
                    android:id="@+id/order_tv01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:text=""
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_lin02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/order_code"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <TextView
                    android:id="@+id/order_tv02"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:text=""
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_lin03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/order_time"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_tv03"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:text="111111"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/fs_45" />

                    <TextView
                        android:id="@+id/order_tv03_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:layout_marginTop="@dimen/ds_20"
                        android:text="222222"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/fs_45" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_lin04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/order_address"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <TextView
                    android:id="@+id/order_tv04"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.4"
                    android:maxLines="2"
                    android:text="adsfsdfasdfsadfadsfsadfasdfasdfasdf"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_lin05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/order_people"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <TextView
                    android:id="@+id/order_tv05"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:text=""
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_lin05_ipone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/order_phone"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <TextView
                    android:id="@+id/order_tv05_ipone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:text=""
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_lin06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="金        额:"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />

                <TextView
                    android:id="@+id/order_tv06"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:text=""
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/fs_45" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/ds_250"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_50"
            android:layout_marginRight="@dimen/ds_50"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/ds_40">

            <TextView
                android:id="@+id/order_tv07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="111"
                android:textColor="@color/color_c0"
                android:textSize="@dimen/fs_45" />

            <Button
                android:gravity="center"
                android:id="@+id/order_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_90"
                android:background="@drawable/btn_blue"
                android:layout_marginTop="@dimen/ds_300"
                android:text="继续继续"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/fs_40" />

            <Button
                android:gravity="center"
                android:id="@+id/order_btn_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_90"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/ds_50"
                android:background="@drawable/btn_blue"
                android:text="电话"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/fs_40" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

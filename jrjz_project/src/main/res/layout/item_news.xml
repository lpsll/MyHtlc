<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_90"
        android:textColor="@color/color_00"
        android:gravity="center_vertical"
        android:textSize="@dimen/fs_45"
        android:paddingLeft="@dimen/ds_40"
        android:text=""/>
    <TextView
        android:id="@+id/tv02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_00"
        android:paddingLeft="@dimen/ds_100"
        android:textSize="@dimen/fs_45"
        android:text=""/>
    <TextView
        android:id="@+id/tv03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_00"
        android:textSize="@dimen/fs_45"
        android:paddingLeft="200dip"
        android:gravity=""
        android:text=""/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginTop="@dimen/ds_20"
        android:background="@color/color_cc"/>

</LinearLayout>

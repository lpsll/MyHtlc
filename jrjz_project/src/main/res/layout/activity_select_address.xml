<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
    </ListView>
    <LinearLayout
        android:id="@+id/select_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:gravity="center"
        android:padding="@dimen/ds_30"
        android:background="@color/navi"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jiahaoxdpi_03"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_10"
            android:text="@string/tj_adresss"
            android:textSize="@dimen/fs_55"
            android:textColor="@color/color_ff"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_40"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/add_tv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_40"
                android:text="ddddd"
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_45"/>
            <TextView
                android:id="@+id/add_tv02"
                android:layout_marginLeft="@dimen/ds_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ddddd"
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_45"/>
            <TextView
                android:id="@+id/add_tv03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_40"
                android:text="ddddd"
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_45"/>
        </LinearLayout>
        <TextView
            android:id="@+id/add_tv04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:layout_marginLeft="@dimen/ds_40"
            android:text="ddddddddddddddddddddddddddddddddddddddddddddddddddddd"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_45"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginTop="@dimen/ds_80"
        android:background="@color/color_cc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_120"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@drawable/morenqxdpi_03"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_40"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_45"
            android:text="@string/sz_adresss"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_200"
            android:background="@drawable/shanchuxdpi_03"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_45"
            android:layout_marginLeft="@dimen/ds_20"
            android:text="@string/delete_adresss"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@drawable/bianjixdpi_03"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_45"
            android:layout_marginLeft="@dimen/ds_20"
            android:text="@string/edit_adresss"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_30"
        android:background="@color/color_cc"/>


</LinearLayout>

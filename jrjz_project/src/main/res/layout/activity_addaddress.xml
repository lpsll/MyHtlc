<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_40"
            android:textColor="@color/color_00"
            android:gravity="center"
            android:textSize="@dimen/fs_45"
            android:text="@string/op_name"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@null"
            android:hint="@string/add_name"
            android:textColor="@color/color_cc"
            android:textSize="@dimen/fs_45"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginLeft="@dimen/ds_40"
        android:background="@color/color_cc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_40"
            android:textColor="@color/color_00"
            android:gravity="center"
            android:textSize="@dimen/fs_45"
            android:text="@string/op_tel"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@null"
            android:hint="@string/add_phone"
            android:textColor="@color/color_cc"
            android:textSize="@dimen/fs_45"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginLeft="@dimen/ds_40"
        android:background="@color/color_cc"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lin01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_40"
            android:textColor="@color/color_00"
            android:gravity="center"
            android:textSize="@dimen/fs_45"
            android:text="@string/op_address"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_80"
            android:layout_gravity="center"
            android:background="@drawable/xiangxia_03"/>
        <View
            android:layout_width="@dimen/ds_4"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_80"
            android:layout_marginTop="@dimen/ds_40"
            android:layout_marginBottom="@dimen/ds_40"
            android:background="@color/color_cc"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_are"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_40"
                android:textColor="@color/color_00"
                android:gravity="center"
                android:textSize="@dimen/fs_45"
                android:text="@string/op_address"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_80"
                android:layout_gravity="center"
                android:background="@drawable/xiangxia_03"/>
            <View
                android:layout_width="@dimen/ds_4"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_80"
                android:layout_marginTop="@dimen/ds_40"
                android:layout_marginBottom="@dimen/ds_40"
                android:background="@color/color_cc"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_huan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_40"
                android:textColor="@color/color_00"
                android:gravity="center"
                android:textSize="@dimen/fs_45"
                android:text="@string/op_address"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_80"
                android:layout_gravity="center"
                android:background="@drawable/xiangxia_03"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginLeft="@dimen/ds_40"
        android:background="@color/color_cc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_40"
            android:textColor="@color/color_00"
            android:gravity="center"
            android:textSize="@dimen/fs_45"
            android:text="@string/op_address"/>
        <EditText
            android:id="@+id/et_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@null"
            android:hint="@string/add_address"
            android:textColor="@color/color_cc"
            android:textSize="@dimen/fs_45"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginLeft="@dimen/ds_40"
        android:background="@color/color_cc"/>

    <Button
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_120"
        android:layout_marginTop="@dimen/ds_160"
        android:layout_marginLeft="@dimen/ds_50"
        android:layout_marginRight="@dimen/ds_50"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_blue_apt"
        android:text="@string/add_preservation"
        android:textColor="@color/color_ff"
        android:textSize="@dimen/fs_50" />

</LinearLayout>

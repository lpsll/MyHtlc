<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <include android:id="@+id/head"
        layout="@layout/pager_head"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <EditText
            android:id="@+id/username_txt"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@null"
            android:layout_marginTop="25dp"
            android:textColorHint="#dfdfdf"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:hint="请输入手机号"
            />
        <!--android:layout_below="@id/username"-->

        <Button
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#0570b6"
            android:text="获取验证码"/>
    </RelativeLayout>
    <View
        android:id="@+id/cut_off_line6"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/username_txt"
        android:background="#f5f5f5"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <EditText
            android:id="@+id/verify_code_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textColorHint="#dfdfdf"
            android:textSize="22sp"
            android:hint="请输入验证码"/>



    </RelativeLayout>
    <View
        android:id="@+id/cut_off_line5"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/username_txt"
        android:background="#f5f5f5"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <EditText
            android:id="@+id/passwd_txt"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@null"
            android:textColorHint="#dfdfdf"
            android:textSize="22sp"
            android:hint="6位以上字母或数字密码"/>

        <View
            android:id="@id/cut_off_line5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/passwd_txt"
            android:background="#dfdfdf"></View>

        <EditText
            android:id="@+id/confirm_pwd_txt"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@null"
            android:textColorHint="#dfdfdf"
            android:textSize="22sp"
            android:hint="请确认密码"
            android:layout_below="@id/cut_off_line5"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#0570b6"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="登录"/>


</LinearLayout>
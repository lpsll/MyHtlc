<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:background="@color/linear_gray"/>
        <RelativeLayout
            android:id="@+id/rl_moresetting_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:background="#ffffff"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40">

            <TextView
                android:layout_width="wrap_content"
                android:text="清除缓存"
                android:textSize="@dimen/x33"
                android:textColor="@color/tv_black"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/x33"
                android:id="@+id/tv_moresetting_cache"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x50"
                android:layout_width="wrap_content"
                android:text="12.2KB"
                android:textColor="@color/tv_hint"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x30"
                android:src="@drawable/arrow_right"
                 />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_moresetting_exit"
           style="@style/button_click"
            android:text="退出登录"/>


    </LinearLayout>
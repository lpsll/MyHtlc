<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/prompt_box_no"
    android:orientation="vertical">
    <TextView
        android:id="@+id/prompt_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_200"
        android:textSize="@dimen/fs_50"
        android:gravity="center"
        android:text="@string/dialog_prompt"
        android:textColor="@color/color_00"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_1"
        android:background="@color/color_cc"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <Button
           android:id="@+id/prompt_tv_no"
           android:layout_width="0dip"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:background="@null"
           android:textSize="@dimen/fs_60"
           android:gravity="center"
           android:text="@string/dialog_prompt_yes"
           android:textColor="@color/colorPrimaryDark"/>
       <View
           android:layout_width="1dip"
           android:layout_height="@dimen/ds_150"
           android:background="@color/color_cc"/>
    <Button
        android:id="@+id/prompt_tv_yes"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@null"
        android:textSize="@dimen/fs_60"
        android:gravity="center"
        android:text="@string/dialog_prompt_yes"
        android:textColor="@color/colorPrimaryDark"/>
   </LinearLayout>
</LinearLayout>

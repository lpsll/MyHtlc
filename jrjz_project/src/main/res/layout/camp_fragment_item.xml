<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds_300"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_260">


        <ImageView
            android:layout_width="@dimen/ds_40"
            android:layout_height="@dimen/ds_60"
            android:layout_marginTop="@dimen/ds_80"
            android:layout_marginLeft="@dimen/ds_70"
            android:id="@+id/img_campaign_fragment_item_rmb"
            android:background="@drawable/hongse_03" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_campaign_fragment_item_chongzhi"
            android:layout_marginLeft="@dimen/ds_180"
            android:layout_marginTop="@dimen/ds_70"
            android:text="充值500元"
            android:textColor="#000000"
            android:textSize="@dimen/fs_45" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_145"
            android:layout_marginLeft="@dimen/ds_180"
            android:textSize="@dimen/fs_45"
            android:id="@+id/tv_campaign_fragment_item_zengsong"
            android:text="赠送价值30元的优惠券" />

        <TextView
            android:textSize="@dimen/ds_45"
            android:id="@+id/img_lijichongzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds_60"
            android:background="@drawable/top_up_selector"
            android:paddingBottom="@dimen/ds_15"
            android:paddingLeft="@dimen/ds_20"
            android:paddingRight="@dimen/ds_20"
            android:paddingTop="@dimen/ds_15"
            android:text="立即充值"
            android:textColor="@drawable/top_up_text_selector" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_40"
        android:background="@color/linear_gray" />

</LinearLayout>

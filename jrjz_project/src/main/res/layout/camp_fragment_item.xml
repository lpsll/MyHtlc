<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x180">


        <ImageView
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x45"
            android:layout_marginTop="@dimen/x45"
            android:layout_marginLeft="@dimen/x55"
            android:id="@+id/img_campaign_fragment_item_rmb"
            android:background="@drawable/hongse_03" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_campaign_fragment_item_chongzhi"
            android:layout_marginLeft="@dimen/x140"
            android:layout_marginTop="@dimen/x45"
            android:text="充值500元"
            android:textColor="#000000"
            android:textSize="@dimen/x33" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x110"
            android:layout_marginLeft="@dimen/x140"
            android:textSize="@dimen/x33"
            android:id="@+id/tv_campaign_fragment_item_zengsong"
            android:text="赠送价值30元的优惠券" />

        <TextView
            android:id="@+id/img_lijichongzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x50"
            android:background="@drawable/btn_blue_border"
            android:paddingBottom="@dimen/x15"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:paddingTop="@dimen/x15"
            android:text="立即充值"
            android:textColor="@color/status_color" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:background="@color/linear_gray" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cc"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_30"
                android:background="@drawable/tiaowen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_117"
                android:background="@color/color_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:text="@string/apt_project"
                    android:textColor="@color/color_00"
                    android:textSize="@dimen/fs_45" />

                <TextView
                    android:id="@+id/tv_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds_60"
                    android:text=""
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/fs_45" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:layout_marginLeft="@dimen/ds_40"
                android:background="@color/color_cc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_117"
                android:background="@color/color_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:text="@string/op_name"
                    android:textColor="@color/color_00"
                    android:textSize="@dimen/fs_45" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds_150"
                    android:text=""
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/fs_45" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_117"
                android:background="@color/color_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:text="@string/op_tel"
                    android:textColor="@color/color_00"
                    android:textSize="@dimen/fs_45" />

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds_150"
                    android:text=""
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/fs_45" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_117"
                android:background="@color/color_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:text="@string/op_address"
                    android:textColor="@color/color_00"
                    android:textSize="@dimen/fs_45" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds_60"
                    android:text=""
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/fs_45" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:layout_marginLeft="@dimen/ds_40"
                android:background="@color/color_cc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_195"
                android:background="@color/color_ff">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ds_40"
                        android:gravity="center_vertical"
                        android:text="@string/total"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_45" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ds_40"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_fce"
                        android:textSize="@dimen/fs_45" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/ds_40"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds_40"
                        android:layout_marginRight="@dimen/ds_40"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_45" />

                    <TextView
                        android:id="@+id/tv_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds_40"
                        android:layout_marginRight="@dimen/ds_40"
                        android:layout_marginTop="@dimen/ds_20"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_45" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_40"
                android:background="@color/color_cc" />

            <RelativeLayout
                android:id="@+id/rl_jf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_150"
                android:background="@color/color_ff">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jifenxdpi_03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds_95"
                        android:text="@string/integral"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_45" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:layout_marginRight="@dimen/ds_90"
                    android:background="@drawable/right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:background="@color/color_cc" />

            <RelativeLayout
                android:id="@+id/rl_yhj"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_150"
                android:background="@color/color_ff">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/youhuiquanxdpi_03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds_95"
                        android:text="@string/coupon"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_45" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:layout_marginRight="@dimen/ds_90"
                    android:background="@drawable/right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_40"
                android:background="@color/color_cc" />

            <RelativeLayout
                android:id="@+id/rl_qb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_150"
                android:background="@color/color_ff">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/qianbaoxdpi_03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds_95"
                        android:text="@string/op_money"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_45" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/place_cb_qb"
                    android:layout_width="@dimen/ds_50"
                    android:layout_height="@dimen/ds_50"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:layout_marginRight="@dimen/ds_90"
                    android:background="@drawable/selector_checkbox"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="false" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:background="@color/color_cc" />

            <RelativeLayout
                android:id="@+id/rl_wx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_150"
                android:background="@color/color_ff">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/weixinxdpi_03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds_95"
                        android:text="@string/op_wx"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_45" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/place_cb_wx"
                    android:layout_width="@dimen/ds_50"
                    android:layout_height="@dimen/ds_50"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:layout_marginRight="@dimen/ds_90"
                    android:background="@drawable/selector_checkbox"
                    android:button="@null"
                    android:checked="false"
                    android:clickable="false" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:background="@color/color_cc" />

            <RelativeLayout
                android:id="@+id/rl_zfb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_150"
                android:background="@color/color_ff">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/zhifubaoxdpi_03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds_60"
                        android:text="@string/op_zfb"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_45" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/place_cb_zfb"
                    android:layout_width="@dimen/ds_50"
                    android:layout_height="@dimen/ds_50"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:layout_marginRight="@dimen/ds_90"
                    android:background="@drawable/selector_checkbox"
                    android:button="@null"
                    android:checked="false"
                    android:clickable="false" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:background="@color/color_cc" />

            <Button
                android:id="@+id/tj_btn"
                style="@style/button_click"
                android:layout_marginBottom="@dimen/ds_40"
                android:text="@string/op_tj" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

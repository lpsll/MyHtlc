            android:name="com.autodesk.easyhome.shejijia.home.activity.AddAddressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.autodesk.easyhome.shejijia.home.activity.ClassificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.autodesk.easyhome.shejijia.order.activity.EvaluateActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.autodesk.easyhome.shejijia.order.activity.OrderNewPaymentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.autodesk.easyhome.shejijia.campaign.activity.TopUpActivity"
